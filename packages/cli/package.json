{
  "name": "rulink",
  "version": "0.7.1",
  "description": "CLI tool for managing Cursor AI rules across projects",
  "bin": {
    "rulink": "./bin/rulink.js"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "cp ../../README.md . && pnpm build",
    "postpublish": "rm -f README.md"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}